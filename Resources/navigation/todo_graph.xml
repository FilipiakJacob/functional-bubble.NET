<?xml version="1.0" encoding="utf-8" ?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:id="@+id/todo_graph"
			app:startDestination="@+id/dest_todo">

	<fragment
		android:id="@+id/dest_todo"
		android:name="functional_bubble.NET.Fragments.TodoBase">
		<action
			android:id="@+id/GoToTask"
			app:destination="@id/dest_task">
		</action>
	</fragment>
	
	<fragment
		android:id="@+id/dest_task"
		android:name="functional_bubble.NET.Fragments.TaskBase">
		<action
			android:id="@+id/GoBackToTodoList"
			app:popUpTo="@+id/dest_todo">
		</action>
	</fragment>
	
</navigation>
