<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/task_base_title"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <EditText
        android:id="@+id/task_base_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/task_base_completeTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30d121"
        android:text="20 zł"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/task_base_deadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:text="22/07/2022  11:48"
        app:layout_constraintBottom_toTopOf="@+id/task_base_completeTaskButton"
        app:layout_constraintEnd_toEndOf="@+id/task_base_completeTaskButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/task_base_completeTaskButton"
        app:layout_constraintTop_toBottomOf="@+id/task_base_goBackButton"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintWidth_percent="0.4" />

    <ImageButton
        android:id="@+id/task_base_deleteTaskButton"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/smietnik_closed"
        app:layout_constraintBottom_toBottomOf="@+id/task_base_completeTaskButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/task_base_completeTaskButton"
        app:layout_constraintTop_toTopOf="@+id/task_base_completeTaskButton"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/task_base_repeatableButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />


    <Button
        android:id="@+id/task_base_goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />


    <ImageView
        android:id="@+id/task_base_date_edit_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_base_deadline"
        app:layout_constraintEnd_toEndOf="@+id/task_base_deadline"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/task_base_deadline"
        app:layout_constraintTop_toTopOf="@+id/task_base_deadline"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.07"
        app:srcCompat="@drawable/kalendarz" />


    <ImageView
        android:id="@+id/task_base_time_edit_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/task_base_deadline"
        app:layout_constraintEnd_toEndOf="@+id/task_base_deadline"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/task_base_deadline"
        app:layout_constraintTop_toTopOf="@+id/task_base_deadline"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.07"
        app:srcCompat="@drawable/zegar" />


</androidx.constraintlayout.widget.ConstraintLayout>