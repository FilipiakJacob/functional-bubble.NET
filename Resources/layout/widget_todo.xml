<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/todo_widget_background"
    android:background="@drawable/widget_todo_style"
    >
    <RelativeLayout
        android:id="@+id/widget_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_todo_style">
        <TextView
            android:id="@+id/widget_title"
            android:text="TOP BAR"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/widget_title" />
        <ImageButton
            android:id="@+id/widget_new_task_button"
            android:background="@android:color/transparent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/plus_button_desc"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/plus_icon"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/widget_tasks"
        android:background="@drawable/widget_todo_tasks_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_top_bar"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_row_1"
            android:layout_below="@id/widget_top_bar"
            android:visibility="gone">
                <TextView
                    android:id="@+id/task_row_title_1"
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/task_row_time_left_1"
                    android:text="Time Left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_row_2"
            android:layout_below="@+id/task_row_1"
            android:visibility="gone">

                <TextView
                    android:id="@+id/task_row_title_2"
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/task_row_time_left_2"
                    android:text="Time Left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_row_3"
            android:layout_below="@+id/task_row_2"
            android:visibility="gone">
                <TextView
                    android:id="@+id/task_row_title_3"
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/task_row_time_left_3"
                    android:text="Time Left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp" />
        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/task_row_4"
            android:layout_below="@+id/task_row_3"
            android:visibility="gone">
                <TextView
                    android:id="@+id/task_row_title_4"
                    android:text="Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/task_row_time_left_4"
                    android:text="Time Left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
